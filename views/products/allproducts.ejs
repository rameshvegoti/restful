<% layout ('layouts/boilerplate') %>
    <link rel="stylesheet" href="/css/products.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <div class="container">
        <div class="row">
            <table class="table table-hover">
                <thead class="bg-dark text-white">
                    <tr>
                        <td>Sno</td>
                        <td>ProductName</td>
                        <td>Price</td>
                        <td>Description</td>
                        <td>Image</td>
                        <td colspan="3">Actions</td>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach((product,index)=>{ %>
                        <tr>
                            <td>
                                <%= index + 1%>
                            </td>
                            <td>
                                <%=product.productname%>
                            </td>
                            <td>
                                <%=product.price%>
                            </td>
                            <td>
                                <%=product.description%>
                            </td>
                            <td>
                                <img src="<%=product.imageUrl%>" alt="<%=product.productname%>" width="70" height="100">
                            </td>
                            <td><a href="/products/<%=product._id%>"><i class="bi bi-arrow-right-circle"></i></a></td>
                            <td><a href="/products/<%=product._id%>/edit"><i class="bi bi-pencil"></i></a></td>
                            <td>
                                <form action="/products/<%=product._id%>?_method=DELETE" method="POST">
                                    <button type="submit" id="deleteBtn"><i class="bi bi-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>






















